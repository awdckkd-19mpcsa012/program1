import java.util.*;
class linkmenu
{
  public static void main (String args [])
  {
    Scanner sc=new Scanner (System.in);
    LinkedList <Integer> x= new LinkedList <Integer>();
    int n,a,ch;
    System.out.println("1.begininsert\n 2.endinsert\n 3.positioninsert\n 4.begindelete\n 5.enddelete\n 6.positiondelete\n 7.display/n 8.exit\n");
    ch=sc.nextInt();
    do
{
  switch(ch)
  {
    case 1: System.out.println("enter n value");
            n=sc.nextInt();
            x.addFirst(n);
            break;
    case 2: System.out.println("enter n value");
            n=sc.nextInt();
            x.addLast(n);
            break;
           
    case 3 : System.out.println("enter n value");
             n=sc.nextInt();
             a=sc.nextInt();
             x.add(a,n);
             break;
    case 4 : System.out.println("enter n value");
             x.removeFirst();
             break;
    case 5 : System.out.println("enter a number");
             x.removeLast();
             break;
    case 6 : System.out.println("enter n");
             a=sc.nextInt();
             x.remove(a);
             break;
    case 7 : System.out.println(x);
    
             
    
    
  }
  System.out.println("1.begininsert 2.endinsert 3.positioninsert 4.begindelete 5.enddel 6.positiondel 7.display 8.exit....... your choice:");
  ch=sc.nextInt();
  }while(ch<8);
   
  }
}




